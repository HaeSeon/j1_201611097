package homework;

import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
import java.io.*;
import java.util.ArrayList;
 import java.util.List;
import java.io.File;


public class AddressGUI extends JFrame implements ActionListener{

AddressData addressData = new AddressData();
  Address address;
  
  
    JTextField a1;
    JTextField a2;
    JTextField a3;
    JTextField a4;

    JButton saveButton;
    JButton deleteButton;
    JButton searchButton;
    JButton exitButton;

    
    
    
 
        public AddressGUI() {
    

    
     
        JPanel panel=new JPanel(new GridLayout(3,2));
        setTitle("Address");
        getContentPane().add(panel);
        JLabel label1=new JLabel("     Name");
        JLabel label2=new JLabel("     Phone Number:");
        JLabel label3=new JLabel("     KaKaoTalk ID:");
        JLabel label4=new JLabel("     SNS:");
        a1=new JTextField(20);
        a2=new JTextField(20);
        a3=new JTextField(20);
        a4=new JTextField(20);
        
        saveButton = new JButton("Save");
        deleteButton= new JButton("Delete");
        searchButton= new JButton("Search");
        saveButton .setPreferredSize(new Dimension(40, 40));
        saveButton .addActionListener(this);
        deleteButton.addActionListener(this);
        searchButton.addActionListener(this);
        exitButton.addActionListener(this);
        
        panel.add(label1);
        panel.add(a1);
        panel.add(saveButton);
        panel.add(lable2);
        panel.add(a2);
        panel.add(deleteButton);
        panel.add(lable3);
        panel.add(a3);
        panel.add(searchButton);
        panel.add(lable4);
        panel.add(a4);
        panel.add(exitButton);
    }   
    
    
    
    
    
    public void actionPerformed (ActionEvent e) {
      
      
      
      
       JButton b=(JButton)e.getSource();
    String cmd=e.getActionCommand();
    if (cmd.equals("Save")){
      Address ad = new Address(addressData);
      addressData.setMeasurements(lable1.getText(),lable2.getText(),lable3.getText(),lable4.getText());
      System.out.println("Regist Data!");
      System.out.println("Name : "+lable1.getText()+"\nPhoneNumber : "+lable2.getText()+"\nKaKaoTalk ID : "+lable3.getText()+"\nSNS : "+lable4.getText());
      lable1.setText("");
      lable2.setText("");
      lable3.setText("");
      lable4.setText("");
    } 
       
    
    }
     
     
  
} 